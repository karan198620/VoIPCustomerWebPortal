@model VoipApplicationProject.Models.CustomerModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<h1>Forgot Password ?</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Find Account" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@if (!String.IsNullOrEmpty(ViewBag.ShowAlert))
{
    if (ViewBag.ShowAlert == "success")
    {
        <script>alert("Reset password URL has been sent to the email successfully!");</script>
    }
    else
    {
        <script>alert("Your email is incorrect. Please try again");</script>
    }
}